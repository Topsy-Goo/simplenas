<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

	<!-- ——————————————————————————————————————————————————————————————————————————— -->

	<Appenders>
		<File name="FILE_APPENDER_CLIENT" fileName="${basePath}/client.log" append="false">
			<PatternLayout pattern="%n%-3p [%t] %C{2} (%F:%L) %d{yyyy-MM-dd HH:mm:ss} ••• %m." />
		</File>

		<File name="FILE_APPENDER_COMMON" fileName="${basePath}/common.log" append="false">
			<PatternLayout pattern="%n%-3p [%t] %C{2} (%F:%L) %d{yyyy-MM-dd HH:mm:ss} ••• %m." />
		</File>

		<File name="FILE_APPENDER_SERVER" fileName="${basePath}/server.log" append="false">
			<PatternLayout pattern="%n%-3p [%t] %C{2} (%F:%L) %d{yyyy-MM-dd HH:mm:ss} ••• %m." />
		</File>

		<Console name="STDOUT_APPENDER" target="SYSTEM_OUT">
			<PatternLayout pattern="%n%-3p [%t] %c{2} (%F:%L) ••• %m." />
		</Console>

		<Console name="STDOUT_APPENDER_ROOT" target="SYSTEM_OUT">
			<PatternLayout pattern="%n%-3p [%t] %c{2} (%F:%L) ••• %m." />
		</Console>

		<Console name="STDOUT_APPENDER_ERR" target="SYSTEM_ERR">
			<PatternLayout pattern="%n%-4p %c{2} [%t] (%F:%L) ••• %m." />
		</Console>

	</Appenders>

	<!-- ——————————————————————————————————————————————————————————————————————————— -->
	<Loggers>
		<Root level="error">
			<AppenderRef ref="FILE_APPENDER_CLIENT" />
			<AppenderRef ref="FILE_APPENDER_COMMON" />
			<AppenderRef ref="FILE_APPENDER_SERVER" />
		</Root>

        <Logger name="ru.gb.simplenas.client" level="info" >
        	<AppenderRef ref="STDOUT_APPENDER"/>
        </Logger>

        <Logger name="ru.gb.simplenas.common" level="info" >
        	<AppenderRef ref="STDOUT_APPENDER"/>
        </Logger>

        <Logger name="ru.gb.simplenas.server" level="info" >
        	<AppenderRef ref="STDOUT_APPENDER"/>
        </Logger>

	</Loggers>

</Configuration>
